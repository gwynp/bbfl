<h1>Barfield Keepers List <%= Time.now.year %></h1>

<div class="center">
<p><%= link_to 'Add A Keeper', new_keeper_path, class: "btn btn-warning btn-lg" %></p>
</div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Division</th>
      <th>Franchise</th>
      <th>First</th>
      <th>Last</th>
      <th>Team</th>
      <th>Year</th>
      <th>Keeper year</th>
    </tr>
  </thead>

  <tbody>
    <% @keepers.each do | keeper |  %>
      <% if keeper.user.division =='Barfield' %>
      <tr>
        <td><%= keeper.user.division %></td>
        <td><%= keeper.user.franchise %></td>
        <td><%= keeper.first %></td>
        <td><%= keeper.last %></td>
        <td><%= keeper.team %></td>
        <td><%= keeper.year %></td>
        <td><%= keeper.keeper_year %></td>
        <% if keeper.user == current_user %>
            <td><%= link_to 'Change', edit_keeper_path(keeper) %></td>
            <td><%= link_to 'Delete', keeper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
